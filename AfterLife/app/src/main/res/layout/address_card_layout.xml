<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="224dp"
    android:layout_height="140dp"
    android:layout_marginVertical="10dp"
    android:layout_marginRight="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="21dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="224dp"
        android:layout_height="140dp">
        <TextView
            android:id="@+id/address_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="title placeholder"
            android:textSize="13dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/user_name_address_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/address_title_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Name PlaceHolder"
            android:textSize="18dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/address_phoneNum_TextView"
            android:text="1234Placeholder"
            android:layout_width="165dp"
            android:layout_marginLeft="17dp"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_name_address_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/address_description_TextView"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:text="place holder"
            app:layout_constraintTop_toBottomOf="@id/address_phoneNum_TextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
