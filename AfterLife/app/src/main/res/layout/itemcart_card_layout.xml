<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/itemcart_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/itemcart_name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item name"
            app:layout_constraintTop_toTopOf="@id/itemcart_ImageView"
            app:layout_constraintStart_toEndOf="@+id/itemcart_ImageView"/>
        <TextView
            android:id="@+id/itemcart_price_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.xx.xxx.xxx"
            android:textColor="@color/green"
            app:layout_constraintTop_toBottomOf="@id/itemcart_name_TextView"
            app:layout_constraintStart_toEndOf="@id/itemcart_ImageView"/>
        
        <Button
            android:id="@+id/min_Button"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="min"
            android:textSize="8dp"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@id/itemcart_price_TextView"
            app:layout_constraintStart_toEndOf="@id/itemcart_ImageView"/>

        <TextView
            android:id="@+id/itemcart_count_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintStart_toEndOf="@id/min_Button"
            app:layout_constraintTop_toTopOf="@id/min_Button"
            app:layout_constraintBottom_toBottomOf="@id/min_Button"/>

        <Button
            android:id="@+id/plus_Button"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="plus"
            android:textSize="8dp"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="@id/itemcart_count_TextView"
            app:layout_constraintBottom_toBottomOf="@id/itemcart_count_TextView"
            app:layout_constraintStart_toEndOf="@id/itemcart_count_TextView"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="del"
            android:textSize="8dp"
            android:padding="0dp"
            app:layout_constraintStart_toEndOf="@id/plus_Button"
            app:layout_constraintTop_toTopOf="@id/plus_Button"
            app:layout_constraintBottom_toBottomOf="@id/plus_Button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>